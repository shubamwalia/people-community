<div class="card card mb-3">
    <div class="card-header bg-info text-white">
        <i class="fas fa-user"></i>
        Users List
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="datatable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td>{{city}}</td>
                        <td>{{status}}</td>
                        <td>{{role}}</td>
                        <td>
                            <a class="text-info m-1" data-toggle="modal" href="#ModalCentermail{{id}}"><i class="fas fa-envelope"></i></a>
                            <a class="text-primary m-1" data-toggle="modal" href="#ModalCenteredit{{id}}"><i class="fas fa-edit"></i></a>


                            <div class="modal fade" id="ModalCenteredit{{id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">Edit User</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin/editusermodal/{{id}}?_method=PUT" method="post">
                                                <input type="hidden" name="_method" value="PUT">
                                                <div class="form-group">
                                                    <label>Email address</label>
                                                    <input type="email" class="form-control" placeholder="Enter email"
                                                        name="email" value="{{email}}" required>
                                                </div>
                                                <div class="form-group">
                                                    <label>Phone</label>
                                                    <input type="text" class="form-control" minlength="10" maxlength="10"
                                                        placeholder="Enter phone number" name="phone" value="{{phone}}"
                                                        required>
                                                </div>
                                                <div class="form-group">
                                                    <label>City</label>
                                                    <input type="text" class="form-control" placeholder="Enter city"
                                                        name="city" value="{{city}}" required>
                                                </div>
                                                <div class="form-group">
                                                    <label>Role</label>
                                                    <select data-style="btn-info" name="role" class="form-control"
                                                       required>
                                                        <optgroup label="select role">
                                                            <option value="user" selected="selected">User</option>
                                                            <option value="communitybuilder">Community-Builder</option>
                                                            <option value="admin">Admin</option>
                                                        </optgroup>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label>Status</label>
                                                    <select data-style="btn-info" name="status" class="form-control"
                                                         required>
                                                        <optgroup label="select status">
                                                            <option value="pending" selected="selected">Pending</option>
                                                            <option value="confirmed">Confirmed</option>
                                                        </optgroup>
                                                    </select>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Update User</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="modal fade" id="ModalCentermail{{id}}" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">Send Message</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin/sendmessage/{{id}}" method="post">
                                                <div class="form-group">
                                                    <label>Email address</label>
                                                    <input type="email" class="form-control" placeholder="Enter email"
                                                        name="email" value="{{email}}" disabled required>
                                                </div>
                                                <div class="form-group">
                                                    <label>Message</label>
                                                    <textarea class="form-control" name="message" placeholder="Write Message"
                                                        required></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Send</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>




                            <a href="/admin/deleteuser/{{id}}" class="text-danger m-1"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>