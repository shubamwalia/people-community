<div class="container">
<div class="card mt-3 shadow">
    <h5 class="card-header bg-info text-white">Edit Community</h5>
    <div class="card-body">
        <form action="/community/editcommunity/{{communities.id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter name" value="{{communities.name}}">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control" placeholder="Enter description">{{communities.description}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
</div>